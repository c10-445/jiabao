<?xml version="1.0" encoding="utf-8"?>
<edu.jiabao.tool.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_delete"
            android:layout_width="112dp"
            android:layout_height="70dp"
            android:background="@drawable/square_shape_sliver"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/crimson"
            tools:layout_editor_absoluteY="36dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/home_background"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:thumb="@drawable/thumb"
        android:track="@drawable/white_track"
        app:layout_constraintBottom_toBottomOf="@+id/home_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timing_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="起床"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_background"
        app:layout_constraintStart_toEndOf="@+id/txt_time"
        app:layout_constraintTop_toTopOf="@+id/home_background" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="08:00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_background"
        app:layout_constraintStart_toStartOf="@+id/home_background"
        app:layout_constraintTop_toTopOf="@+id/home_background" />
        </android.support.constraint.ConstraintLayout>

</edu.jiabao.tool.SwipeListLayout>
